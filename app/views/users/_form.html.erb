<%= form_with model: @user, local: true do |form| %>
  <div>
    <%= form.label :name, "名前" %>
    <%= form.text_field :name %>
  </div>
  <div>
    <%= form.label :email, "メールアドレス" %>
    <%= form.text_field :email %>
  </div>
  <div>
    <%= form.label :age, "年齢" %>
    <%= form.text_field :age %>
  </div>
  <div>
    <%= form.submit button_value %>
  </div>
<% end %>
