<h1>ユーザー一覧</h1>
<table>
  <thead>
    <tr>
      <th scope="col">No.</th>
      <th scope="col">名前</th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each.with_index(1) do |user, i| %>
      <tr>
        <th scope="row"><%= i %></th>
        <td><%= user.name %></td>
        <td>
          <%= link_to "詳細", user %>
          <%= link_to "編集", edit_user_path(user) %>
          <%= link_to "削除", user, method: :delete, data: {confirm: "削除しますか？" } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
